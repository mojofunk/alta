#! /usr/bin/env python
# encoding: utf-8

import os

def init():
    pass


def configure(conf):
    pass


def build(bld):

    source_files = os.path.join('cppformat', 'format.cc')
    include_dirs = 'cppformat'

    if bld.env.ENABLE_SHARED:
        bld.shlib(
            includes=include_dirs,
            export_includes='.',
            source=source_files,
            target='cppformat',
            name='CPPFORMAT_SHARED')

    if bld.env.ENABLE_STATIC:
        bld.stlib(
            includes=include_dirs,
            export_includes='.',
            source=source_files,
            target='cppformat',
            name='CPPFORMAT_STATIC')
