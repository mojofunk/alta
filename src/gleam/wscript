#! /usr/bin/env python
# encoding: utf-8
# Tim Mayberry, 2008

posix_files = '''
posix_signals.cpp
'''.split()


def init():
    pass


def configure(conf):
    pass


def build(bld):

    uselib=['GLIBMM-2.4' ]
    source=bld.path.ant_glob('*.cpp', excl=posix_files)

    if bld.env.ENABLE_SHARED:
        bld.shlib(
            includes='. ..',
            export_includes='..',  # this should probably be .
            source=source,
            uselib=uselib,
            target='gleam',
            name='GLEAM_SHARED')

    if bld.env.ENABLE_STATIC:
        bld.stlib(
            includes='. ..',
            export_includes='..',  # this should probably be .
            source=source,
            uselib=uselib,
            target='gleam',
            name='GLEAM_STATIC')

    if bld.env['BUILD_TESTS']:
        bld.recurse('tests')
