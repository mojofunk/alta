#! /usr/bin/env python
# encoding: utf-8
# Tim Mayberry, 2008

tests = '''
test_filesystem_paths
'''.split()


def build(bld):
    uselib=['GLIB-2.0', 'BOOST_UNIT_TEST_FRAMEWORK']
    if bld.env.ENABLE_SHARED:
        for test in tests:
            bld.program(
                source=test + '.cpp',
                includes='.',
                defines='BOOST_TEST_DYN_LINK=1',
                uselib=uselib,
                use='GLEAM_SHARED',
                target=test)
    if bld.env.ENABLE_STATIC:
        for test in tests:
            bld.program(
                source=test + '.cpp',
                includes='.',
                defines='BOOST_TEST_DYN_LINK=1',
                uselib=uselib,
                use='GLEAM_STATIC',
                target=test)
