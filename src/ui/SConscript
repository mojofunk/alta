# vim: tabstop=4 expandtab shiftwidth=4

import tools.pkgconfig as pkgconfig

Import ('env')

gmojo_deps = \
{
    'gtk+-2.0'             : '2.8.1',
    'goocanvas'            : '0.6',
}

gmojo_env = env.Copy()

gmojo_env.Append(LIBS = ['boost_signals', 'mojo', 'gleam'])

pkgconfig.ParseDependencies ( gmojo_env, gmojo_deps )

gtk_source_files = Split("""
gtk/window.cpp
""")

goo_source_files = Split("""
goo/canvas.cpp
""")

gmojo_source_files = Split("""
application.cpp
application_action_group.cpp
application_actions.cpp
track_view.cpp
edit_window.cpp
edit_window_menu_action_group.cpp
edit_window_menu_ui_definition.cpp
project_action_group.cpp
project_actions.cpp
project_view.cpp
main.cpp
window_title.cpp
dialogs/audio_file_import_dialog.cpp
dialogs/new_audio_track_dialog.cpp
signal_handler.cpp
""")

all_source_files = \
gtk_source_files + \
goo_source_files + \
gmojo_source_files

gmojo = gmojo_env.Program( env['VERSIONED_NAME'], all_source_files)

Default(gmojo)

env.Install(env['BINDIR'], gmojo)
