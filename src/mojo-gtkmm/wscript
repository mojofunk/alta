def configure(conf):
	print "configure mojo-gtkmm"

def build(bld):
	obj = bld.create_obj('cpp', 'program')
	obj.find_sources_in_dirs('.')
	#obj.includes ='.'
	obj.uselib ='GTKMM'
	#obj.uselib_local ='MOJO'
	obj.target = 'mojo-gtkmm'
	#obj.name = 'MOJO-GTKMM'
