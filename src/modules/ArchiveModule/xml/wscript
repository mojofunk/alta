def init():
	pass

def configure(conf):
	print "configure XMLArchive"

def build(ctx):
	shlib = ctx(
		features = "cxx cxxshlib",
		includes = '.',
		source = ctx.path.ant_glob('*.cpp'),
		uselib ='GLIB-2.0',
		use ='MOJO',
		target = 'xml_archive',
		name = 'XML_ARCHIVE')
