# vim: tabstop=4 expandtab shiftwidth=4

import tools.pkgconfig as pkgconfig

Import ('env')

mojo_deps = \
{
#    'glib-2.0'      : '2.10.1',
    'gmodule-2.0'   : '2.10.1'
#    'gthread-2.0'   : '2.10.1',
#    'glibmm-2.4'    : '2.8.1'
}

mojo_env = env.Copy()

mojo_env.Append(LIBS = ['boost_filesystem', 'gleam' ] )

pkgconfig.ParseDependencies ( mojo_env, mojo_deps )

mojo_source_files = Split("""
app.cpp
archive_utils.cpp
audio_clip.cpp
audio_driver_plugin.cpp
audio_effect_plugin.cpp
audio_event.cpp
audio_file.cpp
audio_file_format.cpp
audio_file_plugin.cpp
audio_region.cpp
audio_region_event.cpp
audio_track.cpp
audio_sequence.cpp
directory_names.cpp
dummy_archive.cpp
event.cpp
filesystem_paths.cpp
file_utils.cpp
graph.cpp
midi_track.cpp
plugin_utils.cpp
project.cpp
project_directory.cpp
register_types.cpp
resource.cpp
sample_block.cpp
search_path.cpp
track.cpp
type_names.cpp
type_system.cpp
xml_archive.cpp
""")

libmojo = mojo_env.SharedLibrary ( 'mojo', mojo_source_files )

Default (libmojo)

if env['BUILD_TESTS']:
        SConscript  ( 'tests/SConscript' )
