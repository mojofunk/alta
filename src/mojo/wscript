#! /usr/bin/env python
# encoding: utf-8
# Tim Mayberry, 2008

def init():
	pass

def configure(conf):
	print "configure mojo"

def build(bld):
	obj = bld.create_obj('cpp', 'shlib')
	obj.find_sources_in_dirs('. objects rtg typesystem utils app core')
	obj.includes ='. ..'
	obj.uselib = 'BOOST_FILESYSTEM'
	obj.uselib_local ='GLEAM'
	obj.target = 'mojo'
	obj.name = 'MOJO'

	bld.add_subdirs('tests')
