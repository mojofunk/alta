#! /usr/bin/env python
# encoding: utf-8
# Tim Mayberry, 2008

subdirs = '''
core
engine
application
archive
audio_driver
audio_effect
audio_file
'''


def configure(conf):
    for dir in subdirs.split():
        conf.recurse(dir)


def build(bld):
    # process subfolders from here
    bld.recurse(subdirs)
    if bld.env['BUILD_TESTS']:
        bld.recurse('tests')
