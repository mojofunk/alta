#! /usr/bin/env python
# encoding: utf-8
# Tim Mayberry, 2008


def init():
    pass


def configure(conf):
    print ("configure mojo-core")
    conf.check(
        header_name='execinfo.h',
        define_name='HAVE_EXECINFO',
        mandatory=False)

    if conf.env.TARGET_WINDOWS:
        conf.check(lib='winmm', uselib_store='WINMM')

    conf.write_config_header('config/config.hpp')


def build(bld):
    uselib = ['GLIB-2.0', 'GMODULE-2.0', 'BOOST_FILESYSTEM', 'BOOST_SYSTEM']
    use_local_static = ['src_include_path', 'CPPFORMAT_STATIC', 'MOODYCAMEL']
    use_local_shared = ['src_include_path', 'CPPFORMAT_SHARED', 'MOODYCAMEL']

    if bld.env.TARGET_WINDOWS:
        uselib += ['WINMM']

    defines = ['PROGRAM_DIR_NAME="' + bld.env.PROGRAM_DIR_NAME + '"']
    source = 'mojo-core.cpp'

    if bld.env.ENABLE_SHARED:
        bld.shlib(includes='.',
                  export_includes='.',
                  source=source,
                  uselib=uselib,
                  use=use_local_shared,
                  defines=defines,
                  target='mojo-core',
                  name='MOJO_CORE_SHARED')

    if bld.env.ENABLE_STATIC:
        bld.stlib(includes='.',
                  export_includes='.',
                  source=source,
                  uselib=uselib,
                  use=use_local_static,
                  defines=defines,
                  target='mojo-core',
                  name='MOJO_CORE_STATIC')
